{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "target": "ES6",
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
